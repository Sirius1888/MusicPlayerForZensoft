<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="horizontal"    android:padding="8dp">    <ImageView        android:id="@+id/groupIV"        android:layout_width="90dp"        android:layout_height="90dp"        android:src="@drawable/loading_shape"/>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical"        android:layout_weight="1"        android:padding="5dp">        <TextView            android:id="@+id/groupSongNameTV"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_margin="5dp"            android:textSize="18sp"            android:text="AC/DC"/>        <TextView            android:id="@+id/groupNameTV"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_margin="5dp"            android:textSize="14sp"            android:text="T.N.T."/>    </LinearLayout></LinearLayout>