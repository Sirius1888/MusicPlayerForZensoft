<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="60dp"        android:orientation="horizontal"        android:background="#000"        android:layout_gravity="bottom">        <ImageView            android:id="@+id/groupIV"            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_margin="5dp"            android:background="@drawable/loading_shape_mini" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="horizontal">            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:orientation="vertical"                android:layout_margin="8dp">                <TextView                    android:id="@+id/songNameTV"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Привет как дела Я тут текст"                    android:textSize="16sp"                    android:textColor="@color/colorGroupName"                    android:textStyle="bold"/>                <TextView                    android:id="@+id/groupNameTV"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="AC/DC"                    android:textSize="14sp"                    android:textColor="@color/colorGroupName"/>            </LinearLayout>            <RelativeLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="horizontal"                android:layout_marginTop="16dp">                <ImageButton                    android:id="@+id/backIB"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:background="@drawable/ic_navigate_before_black_24dp"                    android:layout_toLeftOf="@+id/playIB"/>                <ImageButton                    android:id="@+id/playIB"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:background="@drawable/ic_play_arrow_black_24dp"                    android:layout_toLeftOf="@+id/stopIB"/>                <ImageButton                    android:id="@+id/stopIB"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:background="@drawable/ic_pause_black_24dp"                    android:layout_toLeftOf="@+id/nextIB"/>                <ImageButton                    android:id="@+id/nextIB"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:background="@drawable/ic_navigate_next_black_24dp"                    android:layout_alignParentRight="true"/>            </RelativeLayout>        </LinearLayout>    </LinearLayout></android.support.constraint.ConstraintLayout>